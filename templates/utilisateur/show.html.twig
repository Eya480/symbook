{% extends 'base.html.twig' %}

{% block title %}Détail Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détail de l'utilisateur</h1>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ utilisateur.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ utilisateur.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ utilisateur.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ utilisateur.tel }}</td>
                    </tr>
                    <tr>
                        <th>Rue</th>
                        <td>{{ utilisateur.rue }}</td>
                    </tr>
                    <tr>
                        <th>Code postal</th>
                        <td>{{ utilisateur.codePostal }}</td>
                    </tr>
                    <tr>
                        <th>Carte de crédit</th>
                        <td>{{ utilisateur.carteCredit ? '**** **** **** ' ~ utilisateur.carteCredit[-4:] : 'Non renseignée' }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ utilisateur.email }}</td>
                    </tr>
                    <tr>
                        <th>Rôles</th>
                        <td>
                            {% for role in utilisateur.roles %}
                                <span class="badge bg-info text-dark">{{ role }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Mot de passe</th>
                        <td><em>Crypté</em></td>
                    </tr>
                    <tr>
                        <th>Compte vérifié</th>
                        <td>
                            {% if utilisateur.isVerified %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-danger">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>

            <div>
                <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-primary me-2">
                    <i class="bi bi-pencil-square"></i> Modifier
                </a>

                {{ include('utilisateur/_delete_form.html.twig', {
                    'button_class': 'btn btn-danger',
                    'button_icon': 'bi-trash',
                    'button_text': 'Supprimer'
                }) }}
            </div>
        </div>
    </div>
{% endblock %}
